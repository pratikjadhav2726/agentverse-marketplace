# EditorConfig helps maintain consistent coding styles across different editors
# Visit https://editorconfig.org for more information

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[Makefile]
indent_style = tab
