# AgentVerse Marketplace Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# Authentication & Security
# ============================================

# JWT Secret Key - Use a strong, random 32+ character string
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production

# Credential Encryption Key - Must be 32+ characters for AES-256
# Generate with: openssl rand -base64 32
CREDENTIAL_ENCRYPTION_KEY=your-32-character-encryption-key-change-me

# ============================================
# Supabase Configuration
# ============================================

# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================
# Stripe Payment Configuration
# ============================================

# Get these from your Stripe dashboard
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Webhook Secret (for webhook signature verification)
# Get this from Stripe webhook settings
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# Application Configuration
# ============================================

# Application URL (used for callbacks, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment (development, production, test)
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================

# Database file path (for SQLite)
# Default: agentverse.db in the root directory
DATABASE_PATH=./agentverse.db

# ============================================
# Optional: External Services
# ============================================

# Email Service (if implementing email notifications)
# EMAIL_SERVICE_API_KEY=your-email-service-api-key
# EMAIL_FROM_ADDRESS=noreply@agentverse.com

# Analytics (if implementing analytics)
# ANALYTICS_API_KEY=your-analytics-key

# Logging Service (if implementing centralized logging)
# LOG_SERVICE_API_KEY=your-logging-service-key

# ============================================
# Development Only
# ============================================

# Enable debug logging in development
DEBUG=false

# Skip email verification in development
SKIP_EMAIL_VERIFICATION=true
